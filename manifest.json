{
    "manifest_version": 2,
    "name": "MyTurnier",
    "author": "Linas tom Suden",
    "version": "1.0",
    "description": "Eine Browser-Extension die zu den Turnierkalendern auf den Websiten click-tt.de und mytischtennis.de eine interaktive Karte hinzuf√ºgt.",
    "icons": {
        "48": "icons/icon-48.png"
    },
    "permissions": [
        "activeTab",
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.click-tt.de/cgi-bin/WebObjects/nuLigaTTDE.woa/wa/tournamentCalendar?*",
                "https://www.mytischtennis.de/clicktt/*/turnierkalender/"
            ],
            "js": [
                "lib/leaflet/leaflet.js",
                "myturnier.js"
            ],
            "css": [
                "lib/leaflet/leaflet.css"
            ]
        }
    ],
    "web_accessible_resources": [
        "lib/leaflet/images/*"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'; connect-src https://nominatim.openstreetmap.org https://cors-anywhere.herokuapp.com"
}